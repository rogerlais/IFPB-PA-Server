# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true
end_of_line=CRLF
insert_final_newline=true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.{js,py}]
charset=utf-8
tab_width=4
indent_size=4
indent_style = space
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = false

[*.{editorconfig}]
charset=utf-8
tab_width=4
indent_size=4
indent_style = tab